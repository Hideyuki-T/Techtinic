# ---------------------------
# Project Environment Variables
# ---------------------------

# Webサーバーのホスト側ポート（nginx用）
WEB_PORT=8080

# ---------------------------
# Database Configuration (PostgreSQL)
# ---------------------------
DB_CONNECTION=pgsql
DB_HOST=main-db
DB_PORT=5432  # DockerのPostgreSQLコンテナで使うポート (変更する場合は docker-compose.yml も修正)
DB_DATABASE=main_db
DB_USERNAME=hideyuki  # `DB_USER` -> `DB_USERNAME` に変更 (Laravel標準)
DB_PASSWORD=12345

# PostgreSQLでは通常 root のパスワードは不要なので削除

# ---------------------------
# Laravel Application Settings
# ---------------------------
APP_NAME=main
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=https://localhost:8080

# ---------------------------
# Cache and Queue (Future Settings)
# ---------------------------
CACHE_DRIVER=file   # 例: redis, file, memcached など
QUEUE_CONNECTION=   # 例: sync, database, redis など

# ---------------------------
# Mail Configuration (Optional/Future)
# ---------------------------
MAIL_MAILER=    # 例: smtp, sendmail, mailgun, ses
MAIL_HOST=
MAIL_PORT=
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME=

# ---------------------------
# Logging (Optional/Future)
# ---------------------------
LOG_CHANNEL=

# ---------------------------
# Additional Future Environment Variables (Placeholders)
# ---------------------------
FUTURE_VARIABLE_1=
FUTURE_VARIABLE_2=
FUTURE_VARIABLE_3=
